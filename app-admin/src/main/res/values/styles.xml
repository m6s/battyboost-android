<resources>

    <style name="AppTheme" parent="SupportAppTheme" />

    <style name="AppThemeToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeEditingToolbar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="SupportAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
    </style>

    <style name="AppTextAppearanceTiny">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#61000000</item>
    </style>

    <style name="AppTextAppearanceMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#de000000</item>
    </style>
</resources>

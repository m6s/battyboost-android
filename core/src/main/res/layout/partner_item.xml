<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <data>

        <variable
            name="holder"
            type="info.mschmitt.battyboost.core.ui.PartnerRecyclerAdapter.PartnerHolder" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="@{() -> holder.onClick()}"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{holder.key}"
            android:textAppearance="@style/AppTextAppearanceListItemPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{holder.partner.name}"
            android:textAppearance="@style/AppTextAppearanceListItemSecondary" />
    </LinearLayout>
</layout>

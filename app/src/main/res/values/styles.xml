<resources>

    <style name="AppTheme" parent="SupportAppTheme" />

    <style name="AppThemeToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="SupportAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
    </style>

    <style name="AppTextAppearanceListItemPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="AppTextAppearanceListItemSecondaryPlus">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="AppTextAppearanceListItemSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8a000000</item>
    </style>
</resources>

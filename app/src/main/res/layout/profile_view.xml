<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <data>

        <variable
            name="fragment"
            type="info.mschmitt.battyboost.app.profile.ProfileFragment" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/primary"
                    android:theme="@style/AppThemeToolbar" />
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:visibleGone="@{fragment.viewModel.signedIn}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <include
                        layout="@layout/text_output_layout"
                        app:label="@{`Display name`}"
                        app:text="@{fragment.viewModel.authUser.displayName}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <include
                        layout="@layout/text_output_layout"
                        app:label="@{`Email`}"
                        app:text="@{fragment.viewModel.authUser.email}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <include
                        layout="@layout/text_output_layout"
                        app:label="@{`Photo`}"
                        app:text="@{fragment.viewModel.authUser.photoUrl}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <include
                        layout="@layout/text_output_layout"
                        app:label="@{`Balance cents`}"
                        app:text="@{`` + fragment.viewModel.databaseUser.balanceCents}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <include
                        layout="@layout/text_output_layout"
                        app:label="@{`Bank account owner`}"
                        app:text="@{fragment.viewModel.databaseUser.bankAccountOwner}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <include
                        layout="@layout/text_output_layout"
                        app:label="@{`IBAN`}"
                        app:text="@{fragment.viewModel.databaseUser.iban}" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                app:visibleGone="@{!fragment.viewModel.signedIn}">

                <Button
                    style="?borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="@{() -> fragment.onSignInClick()}"
                    android:text="Sign in to view your profile"
                    android:textColor="@color/primaryAccent" />
            </FrameLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>

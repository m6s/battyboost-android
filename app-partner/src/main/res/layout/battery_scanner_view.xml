<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage,ContentDescription,NestedWeights">

    <data>

        <variable
            name="fragment"
            type="info.mschmitt.battyboost.partnerapp.batteryscanner.BatteryScannerFragment" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.journeyapps.barcodescanner.BarcodeView
            android:id="@+id/barcodeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.journeyapps.barcodescanner.ViewfinderView
            android:id="@+id/viewFinderView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <info.mschmitt.battyboost.core.utils.views.StatusBarPlaceholderView
                android:layout_width="0px"
                android:layout_height="0px" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppThemeToolbar" />
        </LinearLayout>
    </FrameLayout>
</layout>
